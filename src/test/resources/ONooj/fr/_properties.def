N_Spec   = npr | titre | initiale | mois | lettre ;
N_Struct = AAN | AN | E01 | NA | NAA | NAN | NCN | NDN | NN |
           NPN | NPNPN | NPV | NX | NX4 | PN | VN | VV | VX |
           XA | XN | XV | XX;

DET_Genre = m | f;
DET_Nb    = s | p;
DET_Spec  = def | pos | dem | ind | int | part | rel ;

PDET_Genre = m | f;
PDET_Nb    = s | p;

PREP_Spec = ell | pv ;

PRO_Genre = m | f;
PRO_Nb    = s | p;
PRO_Pers  = 1 | 2 | 3;
PRO_Spec  = clit | dis | dem | int | rel | ind ;
PRO_Fonc  = nom | acc | dat ;

V_Pers  = 1 | 2 | 3;
V_Temps = INF                   # infinitif
        | IP                    # impératif
        | G | PP                # participes
        | PR | I | PS | F | C   # temps de l'indicatif
        | S | SI ;              # subjonctif
V_Synt  = tr | intr ;
V_Genre = m | f;
V_Nb    = s | p;
V_Spec  = pro | aux ;

